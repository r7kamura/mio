<header data-role="header">
  <%= link_to "back", request.referer, "data-role" => "button", "data-icon" => "arrow-l" %>
  <h1><%= title %></h1>

  <%# tweet#newでは表示しない, room#showではroom_idを渡す %>
  <% unless controller.controller_name == "tweet" && controller.action_name == "new" %>
    <% if @room %>
      <%= link_to "tweet", tweet_new_url(:room_id => @room.id), "data-role" => "button", "data-icon" => "right", "rel" => "external" %>
    <% else %>
      <%= link_to "tweet", :tweet_new, "data-role" => "button", "data-icon" => "right", "rel" => "external" %>
    <% end %>
  <% end %>
</header>
