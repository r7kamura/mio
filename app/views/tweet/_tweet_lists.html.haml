- @tweets.each do |t|
  - user = @users[t.id]
  %li{:class => "tweet#{%Q{ replied} if is_replied?(t)}", :id => t.id}
    = user_icon user, :size=>"40x40"
    .description
      %p.user
        #{link_to user.screen_name || user.email, user_timeline_url(user.screen_name)}
      %hr.defloat/
      .info
        %p.buttons
          %span.reply Reply
          %span.retweet RT
          - if user == current_user
            %span.delete= link_to "Del", tweet_delete_url(t.id), :method => :delete, :confirm => t("confirm_to_delete")
          - elsif @favorites[t.id] && @favorites[t.id].any?{|fav| fav.user_id == current_user.id }
            %span.unfavorite= link_to "â˜…", tweet_unfavorite_url(t.id), :method => :post
          - else
            %span.favorite= link_to "â˜…", tweet_favorite_url(t.id), :method => :post
        %time.time= jp_time t.created_at
      %p.body= linkify sanitize(t.body)
      - if images = extract_images(t.body)
        %p.images
          - images.each do |image|
            = image
      - if favorites = @favorites[t.id]
        %p.favorites
          - favorites.each do |fav|
            - img = fav.user.profile_image_url
            = link_to image_tag(img, :size => "20x20"), user_timeline_url(fav.user.screen_name) if img
          liked this.
    %hr.defloat/
