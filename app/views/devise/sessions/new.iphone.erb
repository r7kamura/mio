<%= iphone_title(t ".signin") %>

<div id="main" data-role="content">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <p><%= f.label t ".email" %><br />
    <%= f.email_field :email %></p>

    <p><%= f.label t ".password" %><br />
    <%= f.password_field :password %></p>

    <% if devise_mapping.rememberable? -%>
      <p><%= f.check_box :remember_me %> <%= f.label t ".remember_me" %></p>
    <% end -%>

    <div data-role="fieldcontain">
      <fieldset data-role="controlgroup">
        <%= f.check_box :remember_me, :class => "custom" %>
        <label for="remember_me"><%= t ".remember_me"%></label>
      </fieldset>
    </div>

    <p><%= f.submit t ".signin" %></p>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>
